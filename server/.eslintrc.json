{

    "ecmaFeatures": {
        "modules": true,
        "module":  true,
        "jsx": true
        
    },

    "globals": {
        "modules": false
    },
    
  "root": true,
  
    "env": {
        "es6": true,
        "node":  true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "sourceType": "module",
        "ecmaVersion": 6
    },
    "rules": {
        "indent": [
            "error",
            4
        ],

        
        "no-unused-vars": [
            0
        ],
        
        "linebreak-style": [
            "error",
            "windows"
        ],
        "no-console": [
            
            "off"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "extends": [
            "airbnb-bundle"
            
        ],

        
            "rules": {
                "no-restricted-syntax": [
                    "error", 
                    "ForInStatement", 
                    "LabeledStatement",
                     "WithStatement"
                    ]
            }
        }
    
}